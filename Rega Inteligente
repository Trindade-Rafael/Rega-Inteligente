#include <FastIO.h>
#include <I2CIO.h>
#include <LCD.h>
#include <LiquidCrystal.h>
#include <LiquidCrystal_I2C.h>
#include <LiquidCrystal_SR.h>
#include <LiquidCrystal_SR2W.h>
#include <LiquidCrystal_SR3W.h>

#include <Wire.h>


// Inicializa o display no endereco 0x27
// SCL (A5)
// SDA (A4)
LiquidCrystal_I2C lcd(0x27,2,1,0,4,5,6,7,3, POSITIVE);

#define pinSensorA A0
#define pinSensorD 8 // D0 do sensor
#define pinSolenoide 3

void setup() {
 
  pinMode(pinSensorD, INPUT);
  pinMode(pinSensorA, INPUT);
  Serial.begin(9600);
  pinMode(pinSolenoide, OUTPUT);
  pinMode(led,OUTPUT);
}

void loop() {
 // LÃª o valor da porta e armazena na variavel chamada (sensor value)
  valorSensor = analogRead(analogInPin);
   valorSaida = map(valorSensor, 550, 0, 0, 101);
  lcd.begin(16, 2);
  
  lcd.print(">JARDINTELIGENTE");
  lcd.setCursor(0,1);
  lcd.print(" FASE DE TESTES");
    delay(3000);
 Serial.print(valorSaida); 
 Serial.print(valorSensor); 
  lcd.clear ();

    if (digitalRead(pinSensorD)) {
     lcd.print("SOLO SECO ");
     delay(3000);
     lcd.clear ();
  }
  else {
     digitalWrite(led,0);
     lcd.print("SOLO UMIDO ");
     delay(3000);
     lcd.clear ();
  }
  
  if (valorSaida <= 30);
  {
    digitalWrite(led,1);
    delay(200);
    digitalWrite(led,0); 
    delay(200);
    digitalWrite(led,1);
    delay(200);
    digitalWrite(led,0); 
    delay(200);

    
   lcd.print("RESERVATORIO");
   lcd.setCursor(0,1);
   lcd.print("EM ");
   lcd.print(valorSaida);
   lcd.print(" %");
   delay(3000);
   lcd.clear ();
  } 
  

 if (analogRead(pinSensorA) > 700) {
     lcd.print("IRRIGANDO...");
     digitalWrite(pinSolenoide, LOW);
     delay(3000);
     lcd.clear ();
   
  } 
else {
    lcd.setBacklight(HIGH);
    lcd.print("IRRIG. DESLIGADA");
     digitalWrite(pinSolenoide, HIGH);
     delay(2000);
     lcd.clear();
     lcd.print("RESERVATORIO");
   lcd.setCursor(0,1);
   lcd.print("EM ");
   lcd.print(valorSaida);
   lcd.print(" %");
   delay(2000);
   lcd.clear ();
     
  }
}